@model alannafranco.Models.Autor

@{
    ViewBag.Title = "Excluir Autor";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja excluir o autor "@Html.DisplayFor(model => model.Nome)"</h3>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
